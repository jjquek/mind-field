---
import BaseLayout from "../layouts/BaseLayout.astro";
import BgImageWText from "../components/BgImageWText.astro";
import headerImg from "/images/coast-i.jpg?url";
import jjLookingOut from "/images/coast-ii.jpg?url";
import coastCommunity from "/images/coast-community.jpg?url";
import clocktowerCommunity from "/images/clocktower-comm.jpg?url";
import jjAndDrew from "/images/jj-and-drew.jpg?url";
import baCommmunity from "/images/ba-community.jpg?url";
---

<BaseLayout pageTitle="Soul Gallery">
  <!-- Header Section -->
  <BgImageWText
    imgSrc={headerImg}
    altText="jj at the beach"
    header="mind field"
    text="documenting my inner world"
  />
  <!-- First Feature Section -->
  <div class="bg-gray-900 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl sm:text-center">
        <h2 class="text-base font-semibold leading-7 text-secondary">
          Litter is bad
        </h2>
        <p
          class="mt-2 text-3xl font-bold tracking-tight text-accent sm:text-4xl"
        >
          I'm writing to clean up my mind
        </p>
      </div>
    </div>
    <div class="relative overflow-hidden pt-16">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <img
          src={jjLookingOut}
          alt="jj at the beach looking out"
          class="mb-[-12%] rounded-xl shadow-2xl ring-1 ring-white/10"
          width="2432"
          height="1442"
        />
        <div class="relative" aria-hidden="true">
          <div
            class="absolute -inset-x-20 bottom-0 bg-gradient-to-t from-gray-900 pt-[7%]"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Second Feature Section -->
  <div class="mt-32 overflow-hidden sm:mt-40">
    <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8">
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 gap-x-12 gap-y-16 lg:mx-0 lg:min-w-full lg:max-w-none lg:flex-none lg:gap-y-8"
      >
        <div class="lg:col-end-1 lg:w-full lg:max-w-lg lg:pb-8">
          <h2 class="text-3xl font-bold tracking-tight text-accent sm:text-4xl">
            help a fella out
          </h2>
          <p class="mt-6 text-xl leading-8 text-base-content">
            Join me in wondering out loud.
          </p>
          <p class="mt-6 text-base leading-7 text-gray-600">
            You can't leave comments yet though soz. W.I.P. Join the tele group
            or the mail list. If you can.
          </p>
        </div>
        <div
          class="flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents"
        >
          <div
            class="w-0 flex-auto lg:ml-auto lg:w-auto lg:flex-none lg:self-end"
          >
            <img
              src={coastCommunity}
              alt="jj and his homies at the beach"
              class="aspect-[7/5] w-[37rem] max-w-none rounded-2xl bg-gray-50 object-cover"
            />
          </div>
          <div
            class="contents lg:col-span-2 lg:col-end-2 lg:ml-auto lg:flex lg:w-[37rem] lg:items-start lg:justify-end lg:gap-x-8"
          >
            <div
              class="order-first flex w-64 flex-none justify-end self-end lg:w-auto"
            >
              <img
                src={jjAndDrew}
                alt="jj and drew with cake"
                class="aspect-[4/3] w-[24rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover"
              />
            </div>
            <div class="flex w-96 flex-auto justify-end lg:w-auto lg:flex-none">
              <img
                src={clocktowerCommunity}
                alt="jj and his friends at a coastal clocktower"
                class="aspect-[7/5] w-[37rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover"
              />
            </div>
            <div
              class="hidden sm:block sm:w-0 sm:flex-auto lg:w-auto lg:flex-none"
            >
              <img
                src={baCommmunity}
                alt="picture of church community"
                class="aspect-[4/3] w-[24rem] max-w-none rounded-2xl bg-gray-50 object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- 'call to action' section -->
  <div class="bg-gray-900">
    <div
      class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:flex lg:items-center lg:justify-between lg:px-8"
    >
      <h2 class="text-3xl font-bold tracking-tight text-accent sm:text-4xl">
        Make the world a less dirty place
      </h2>
      <div class="mt-10 flex items-center gap-x-6 lg:mt-0 lg:flex-shrink-0">
        <a
          href="/posts/"
          class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >Start Reading</a
        >
        <a
          href="/about/"
          class="text-sm font-semibold leading-6 text-base-content"
          >Learn More <span aria-hidden="true">â†’</span></a
        >
      </div>
    </div>
  </div>
</BaseLayout>
