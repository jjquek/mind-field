---
import BaseLayout from "../layouts/BaseLayout.astro";
import BgImageWText from "../components/BgImageWText.astro";
import headerImg from "/images/coast-i.jpg?url";
import firstFeatureImg from "/images/coast-ii.jpg?url";
import secondFeatureImg from "/images/coast-community.jpg?url";
---

<BaseLayout pageTitle="Soul Gallery">
  <!-- Header Section -->
  <BgImageWText
    imgSrc={headerImg}
    altText="jj at the beach"
    header="Soul Gallery"
    text="new exhibitions every season"
  />
  <!-- First Feature Section -->
  <div class="overflow-hidden bg-gray-900 py-20 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-2"
      >
        <div class="lg:pr-8 lg:pt-4">
          <div class="lg:max-w-lg">
            <h2 class="text-base font-semibold leading-7 text-indigo-400">
              By faith
            </h2>
            <p
              class="mt-2 text-3xl font-bold tracking-tight text-base-content sm:text-4xl"
            >
              Writing is an act of faith
            </p>
            <dl
              class="mt-10 max-w-xl space-y-8 text-base leading-7 text-gray-300 lg:max-w-none"
            >
              <div class="relative pl-9">
                <dt class="inline font-semibold text-base-content">
                  Faith in yourself as a writer
                </dt>
                <dd class="inline">despite all the imperfections</dd>
              </div>
              <div class="relative pl-9">
                <dt class="inline font-semibold text-base-content">
                  Faith in your writing
                </dt>
                <dd class="inline">to do good for those who read</dd>
              </div>
              <div class="relative pl-9">
                <dt class="inline font-semibold text-base-content">
                  Faith in your motivations
                </dt>
                <dd class="inline">to write</dd>
              </div>
            </dl>
          </div>
        </div>
        <img
          src={firstFeatureImg}
          alt="jj at the beach ii"
          class="mt-10 aspect-[6/5] w-full max-w-lg rounded-2xl object-cover sm:mt-10 lg:mt-0 lg:max-w-none xl:row-span-2 xl:row-end-2 xl:mt-36"
        />
      </div>
    </div>
  </div>
  <!-- Second Feature Section -->
  <div class="overflow-hidden bg-gray-900 py-20 sm:py-24">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div
        class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-8 lg:mx-0 lg:max-w-none lg:grid-cols-2"
      >
        <img
          src={secondFeatureImg}
          alt="jj at the beach ii"
          class="mt-10 aspect-[6/5] w-full max-w-lg rounded-2xl object-cover sm:mt-10 lg:mt-0 lg:max-w-none xl:row-span-2 xl:row-end-2 xl:mt-36"
        />
        <div class="lg:pr-8 lg:pt-4">
          <div class="lg:max-w-lg">
            <h2 class="text-base font-semibold leading-7 text-indigo-400">
              But not alone
            </h2>
            <p
              class="mt-2 text-3xl font-bold tracking-tight text-base-content sm:text-4xl"
            >
              we should do in community
            </p>
            <p class="mt-6 text-base leading-8 text-gray-300">
              my space to wonder out loud and invite others to join me. A space
              to be vocal and accountable. A space to assert and explore.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- 'call to action' section -->
  <div class="bg-gray-900">
    <div
      class="mx-auto max-w-7xl px-6 py-24 sm:py-32 lg:flex lg:items-center lg:justify-between lg:px-8"
    >
      <h2
        class="text-3xl font-bold tracking-tight text-base-content sm:text-4xl"
      >
        There's no entrance fee
      </h2>
      <div class="mt-10 flex items-center gap-x-6 lg:mt-0 lg:flex-shrink-0">
        <a
          href="/posts/"
          class="rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-base-content shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
          >Start Reading</a
        >
        <a
          href="/about/"
          class="text-sm font-semibold leading-6 text-base-content"
          >Learn More <span aria-hidden="true">â†’</span></a
        >
      </div>
    </div>
  </div>
</BaseLayout>
