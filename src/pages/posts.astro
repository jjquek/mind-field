---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
const blogEntries = await getCollection("blog");
---

<BaseLayout pageTitle="Posts">
  <div class="bg-grey-900 py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl">
        <h2
          class="text-3xl font-bold tracking-tight text-neutral-content sm:text-4xl"
        >
          Latest Posts
        </h2>
        <p class="mt-2 text-lg leading-8 text-base-content">
          writing to hear and be heard
        </p>
        <div
          class="mt-10 space-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16"
        >
          {
            blogEntries.map((blogPostEntry) => (
              <article class="flex max-w-xl flex-col items-start justify-between">
                <div class="flex items-center gap-x-4 text-xs">
                  <time
                    datetime={blogPostEntry.data.date}
                    class="text-base-content"
                  >
                    {blogPostEntry.data.date}
                  </time>
                  {blogPostEntry.data.tags.map((tag) => (
                    // todo : create tags page
                    <a
                      href="#"
                      class="relative z-10 rounded-full bg-secondary px-3 py-1.5 font-medium text-info-content hover:bg-secondary-focus"
                    >
                      {tag}
                    </a>
                  ))}
                </div>
                <div class="group relative">
                  <h3 class="mt-3 text-lg font-semibold leading-6 text-accent group-hover:text-accent-focus">
                    <a href={`/posts/${blogPostEntry.slug}`}>
                      <span class="absolute inset-0" />
                      {blogPostEntry.data.title}
                    </a>
                  </h3>
                  <p class="mt-5 line-clamp-3 text-sm leading-6 text-base-content">
                    {blogPostEntry.data.description}
                  </p>
                </div>
              </article>
            ))
          }
          <!-- More posts... -->
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

