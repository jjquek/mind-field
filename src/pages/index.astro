---
import BaseLayout from "../layouts/BaseLayout.astro";
import BgImageWText from "../components/BgImageWText.astro";
---

<BaseLayout pageTitle="Soul Gallery">
  <BgImageWText
    imgSrc="/images/coast-i.jpg"
    altText="jj at the beach"
    header="Soul Gallery"
    text="It\'s a bit edgy but I like it"
  />
  <!-- code from https://tailwindui.com/components/marketing/sections/blog-sections#component-7c4bcd0e50e14e855d55d20b6cd445d1-->
  <div class="py-24 sm:py-26">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h2 class="text-3xl font-bold tracking-tight text-white sm:text-4xl">
          The Front
        </h2>
        <p class="mt-2 text-lg leading-8 text-gray-600">
          What I've written lately.
        </p>
      </div>
      <div
        class="mx-auto mt-16 grid max-w-2xl auto-rows-fr grid-cols-1 gap-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        <article
          class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80"
        >
          <img
            src="/images/stub-i.png"
            alt="black moon emoji stub image"
            class="absolute inset-0 -z-10 h-full w-full object-cover"
          />
          <div
            class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"
          >
          </div>
          <div
            class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"
          >
          </div>

          <div
            class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300"
          >
            <time datetime="2020-03-16" class="mr-8">Mar 16, 2020</time>
          </div>
          <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
            <a href="#">
              <span class="absolute inset-0"></span>
              My latest post
            </a>
          </h3>
        </article>
        <article
          class="relative isolate flex flex-col justify-end overflow-hidden rounded-2xl bg-gray-900 px-8 pb-8 pt-80 sm:pt-48 lg:pt-80"
        >
          <img
            src="/images/stub-i.png"
            alt="black moon emoji stub image"
            class="absolute inset-0 -z-10 h-full w-full object-cover"
          />
          <div
            class="absolute inset-0 -z-10 bg-gradient-to-t from-gray-900 via-gray-900/40"
          >
          </div>
          <div
            class="absolute inset-0 -z-10 rounded-2xl ring-1 ring-inset ring-gray-900/10"
          >
          </div>

          <div
            class="flex flex-wrap items-center gap-y-1 overflow-hidden text-sm leading-6 text-gray-300"
          >
            <time datetime="2020-03-16" class="mr-8">Mar 16, 2020</time>
          </div>
          <h3 class="mt-3 text-lg font-semibold leading-6 text-white">
            <a href="#">
              <span class="absolute inset-0"></span>
              My second latest post
            </a>
          </h3>
        </article>
        <!-- More posts... -->
      </div>
    </div>
  </div>
</BaseLayout>
